<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.EditProfileActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentTop="true"
            android:animateLayoutChanges="true"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            android:background="@drawable/headerbg"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:titleTextColor="@android:color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/close"
                    android:layout_alignParentLeft="true"
                    android:scaleType="centerInside"
                    android:layout_centerVertical="true"
                    android:visibility="visible" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Edit Profile"
                    android:textColor="@color/yellow_light"
                    android:textSize="18sp"
                    android:id="@+id/header_text"
                    android:visibility="visible" />

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="516dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:gravity="center|top"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintVertical_bias="0.26">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
<RelativeLayout
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginTop="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/im_image_profile"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/dummy" />
    <ImageView
        android:id="@+id/im_add_imgbtn"
        android:layout_width="20dp"
        android:src="@drawable/add_editpg"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_height="20dp" />
</RelativeLayout>

                <TextView
                    android:id="@+id/tv_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alen Leo"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/black"/>
            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">
    <EditText
        android:id="@+id/et_fst_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:layout_marginBottom="10dp"
        android:textColorHint="@color/gray"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_lst_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:layout_marginBottom="10dp"
        android:textColorHint="@color/gray"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User Name"
        android:layout_marginBottom="10dp"
        android:textColorHint="@color/gray"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/et_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile number"
        android:layout_marginBottom="10dp"
        android:textColorHint="@color/gray"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/et_regnum_vehcl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vehicle Registration number"
        android:textColorHint="@color/gray"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/et_model_vehcl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vehicle Model"
        android:layout_marginBottom="10dp"
        android:textColorHint="@color/gray"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:background="@drawable/buttonsqr_solid"
        android:textAllCaps="false"
        android:text="Save Changes"/>
</LinearLayout>
        </LinearLayout>

</android.support.constraint.ConstraintLayout>